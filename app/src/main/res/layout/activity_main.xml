<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/gray"
        android:ems="10"
        android:gravity="right|center"
        android:inputType="textPersonName"
        android:layout_marginBottom="1pt"
        android:text="0"
        android:textSize="40pt" />

<TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow

            android:layout_width="match_parent"
            android:layout_marginBottom="1pt"
            android:layout_height="match_parent">

        <Button
            android:id="@+id/buAC"
            android:text="AC"
            android:layout_marginRight="1pt"
            android:onClick="acEvent"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:layout_weight="1"
            android:background="@color/blueback"
            ></Button>
            <Button
                android:id="@+id/buPlusMinus"
                android:text="+/-"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                ></Button>
            <Button
                android:id="@+id/buDivide"
                android:text="/"
                android:onClick="operatorEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/blueback"
                ></Button>
            <Button
                android:id="@+id/buMultiply"
                android:text="*"
                android:textColor="#FFF"
                android:onClick="operatorEvent"
                android:layout_marginRight="1pt"
                android:layout_height="30pt"
                android:layout_width="30pt"
                android:layout_weight="1"
                android:background="@color/PrimaryDark"
                ></Button>
        </TableRow>
    <TableRow
        android:layout_marginBottom="1pt"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/bu7"
            android:text="7"
            android:onClick="numberEvent"
            android:layout_marginRight="1pt"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:layout_weight="1"
            android:background="@color/blueback"
            ></Button>
        <Button
            android:id="@+id/bu8"
            android:text="8"
            android:layout_marginRight="1pt"
            android:onClick="numberEvent"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:layout_weight="1"
            android:background="@color/blueback"
            ></Button>
        <Button
            android:id="@+id/bu9"
            android:text="9"
            android:layout_marginRight="1pt"
            android:onClick="numberEvent"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:layout_weight="1"
            android:background="@color/blueback"
            ></Button>
        <Button
            android:id="@+id/buPercent"
            android:text="%"
            android:textColor="#FFF"
            android:onClick="percentEvent"
            android:layout_marginRight="1pt"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:layout_weight="1"
            android:background="@color/PrimaryDark"
            ></Button>
    </TableRow>
    <TableRow
        android:layout_marginBottom="1pt"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/bu4"
            android:text="4"
            android:layout_marginRight="1pt"
            android:layout_height="30pt"
            android:onClick="numberEvent"
            android:layout_width="30pt"
            android:layout_weight="1"
            android:background="@color/blueback"
            ></Button>
        <Button
            android:id="@+id/bu5"
            android:text="5"
            android:layout_marginRight="1pt"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:onClick="numberEvent"
            android:layout_weight="1"
            android:background="@color/blueback"
            ></Button>
        <Button
            android:id="@+id/bu6"
            android:text="6"
            android:layout_marginRight="1pt"
            android:layout_height="30pt"
            android:onClick="numberEvent"
            android:layout_width="30pt"
            android:layout_weight="1"
            android:background="@color/blueback"
            ></Button>
        <Button
            android:id="@+id/buPlus"
            android:text="+"
            android:textColor="#FFF"
            android:onClick="operatorEvent"
            android:layout_marginRight="1pt"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:layout_weight="1"
            android:background="@color/PrimaryDark"
            ></Button>
    </TableRow>
    <TableRow
        android:layout_marginBottom="1pt"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/bu1"
            android:text="1"
            android:layout_marginRight="1pt"
            android:layout_height="30pt"
            android:onClick="numberEvent"
            android:layout_width="30pt"
            android:layout_weight="1"
            android:background="@color/blueback"
            ></Button>
        <Button
            android:id="@+id/bu2"
            android:text="2"
            android:layout_marginRight="1pt"
            android:layout_height="30pt"
            android:onClick="numberEvent"
            android:layout_width="30pt"
            android:layout_weight="1"
            android:background="@color/blueback"
            ></Button>
        <Button
            android:id="@+id/bu3"
            android:text="3"
            android:layout_marginRight="1pt"
            android:layout_height="30pt"
            android:onClick="numberEvent"
            android:layout_width="30pt"
            android:layout_weight="1"
            android:background="@color/blueback"
            ></Button>
        <Button
            android:id="@+id/buMinus"
            android:text="-"
            android:textColor="#FFF"
            android:onClick="operatorEvent"
            android:layout_marginRight="1pt"
            android:layout_height="30pt"
            android:layout_width="30pt"
            android:layout_weight="1"
            android:background="@color/PrimaryDark"
            ></Button>
    </TableRow>
</TableLayout>

<LinearLayout
    android:layout_marginBottom="1pt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
        android:id="@+id/bu0"
        android:text="0"
        android:layout_marginRight="1pt"
        android:layout_height="30pt"
        android:onClick="numberEvent"
        android:layout_width="45pt"
        android:layout_weight="2"
        android:background="@color/blueback"
        ></Button>
    <Button
        android:id="@+id/buDot"
        android:text="."
        android:layout_marginRight="1pt"
        android:layout_height="30pt"
        android:onClick="numberEvent"
        android:layout_width="45pt"
        android:layout_weight="1"
        android:background="@color/blueback"
        ></Button>

    <Button
        android:id="@+id/buEqual"
        android:text="="
        android:textColor="#FFF"
        android:onClick="EqualEvent"
        android:layout_marginRight="1pt"
        android:layout_height="30pt"
        android:layout_width="30pt"
        android:layout_weight="1"
        android:background="@color/PrimaryDark" />







    </LinearLayout>
</LinearLayout>

